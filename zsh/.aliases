alias ..='cd ..'
alias dx='docker-compose exec'
alias e=emacs
alias emacs='emacsclient -c'
alias et='emacs -t'
alias g=git
alias gch='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gst='git status --short'
alias grt='cd $(git rev-parse --show-toplevel)'
alias halt='openrc-shutdown -H now'
alias l='ls -al'
alias ls='ls --color=tty'
alias reboot='openrc-shutdown -r now'
alias s='sudo'
alias shutdown='openrc-shutdown -p now'
alias sudo='sudo '

compdef _docker-compose dx='docker-compose exec'

function esudo() {
    e /sudo::"$1"
}

function mkcd() {
    mkdir -p "$@" && cd "$@"
}

function mkmv() {
    mkdir -p "${@: -1:1}" && mv "$@"
}

function _source_if_exists() {
    [ -r "$1" ] && source $1
}
