alias e=emacs
alias emacs='emacsclient -c'
alias g=git
alias gch='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gst='git status --short'
alias l='ls --color=tty -al'
alias ls='ls --color=tty'
alias s=sudo

function esudo() {
    e /sudo::"$1"
}

function mkcd() {
    mkdir -p "$@" && cd "$@"
}

function _source_if_exists() {
    [ -r "$1" ] && source $1
}

function dx() {
    docker exec $@
}
compdef _docker dx="_docker_complete_running_containers"
