function ssh_connection() {
  if [[ -n $SSH_CONNECTION ]]; then
    echo "%{$fg_bold[yellow]%}ssh@%m :: "
  fi
}

PROMPT='$(ssh_connection)%{$fg[magenta]%}%2~%B :: %{$reset_color%}'
RPROMPT='%{$fg[magenta]%}$(git_prompt_info)%{$reset_color%}%{$reset_color%}'

