# terminal emulator
super + Return
	urxvt

# program launcher
super + @space
	rofi -show run

# script launcher
super + i
	rofi -show scripts -modi scripts:~/.local/bin/rofi-launcher

# pass launcher
super + p
	~/.local/bin/rofi-pass

# calculator
super + c
	rofi -show calc -modi calc -no-show-match -no-sort

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# spawn next window in given direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel pre-selection
super + ctrl + c
	bspc node -p cancel

# flip desktop
super + r
	bspc node @focused:/ --rotate 90

# swap desktops
super + alt + {1-5}
	bspc desktop -s '^{1-9}'

XF86ScreenSaver
        i3lock -i ~/dotfiles/wallpaper_gray.png

XF86AudioRaiseVolume
	amixer set Master playback 2dB+

XF86AudioLowerVolume
	amixer set Master playback 2dB-

XF86AudioMute
	amixer set Master playback togglemute

XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10

XF86Sleep
	echo RELOADAGENT | gpg-connect-agent && ssh-add -D && i3lock -i ~/dotfiles/wallpaper_gray.png && sudo s2ram

super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
