# permanently set alternative root dir. Use ":" to separate multiple roots
# which can be switched at runtime with shift+left/right
# root=/path/to/root

_rofi () {
    rofi -i -no-auto-select "$@"
}
fix_layout=false

layout_cmd () {
  setxkbmap us
}

URL_field='url'
USERNAME_field='username'
AUTOTYPE_field='autotype'

delay=2
wait=0.2

EDITOR='emacs'
BROWSER='firefox'

default_do='copyPass'
auto_enter='false'
notify='false'
default_autotype='user :tab pass'

help_color="#4872FF"

clip=both
autotype="Alt+1"
type_user="Alt+2"
type_pass="Alt+3"
open_url="Alt+4"
copy_name="Alt+u"
copy_url="Alt+l"
copy_pass="Alt+p"
show="Alt+o"
copy_entry="Alt+2"
type_entry="Alt+1"
copy_menu="Alt+c"
action_menu="Alt+a"
type_menu="Alt+t"
help="Alt+h"
switch="Alt+x"
insert_pass="Alt+n"
